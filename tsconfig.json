{
  "compilerOptions": {
    "target": "es6",
    "module": "none",
    "lib": ["dom", "es6"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "tailwind.config.js"]
}
